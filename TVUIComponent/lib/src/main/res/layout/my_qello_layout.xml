<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/qello_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_my_qello_guest"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85px"
        android:layout_marginTop="85px"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/logged_out_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="visible">

            <Button
                android:id="@+id/free_trial_button"
                style="@style/button_border_highlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="left|center_vertical"
                android:text="Start Free Trial"
                android:textAllCaps="false"
                android:textColor="#C4C4C4"
                android:textSize="14sp" />

            <Button
                android:id="@+id/login_button"
                style="@style/button_border_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="left|center_vertical"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#C4C4C4"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_btn_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="gone">

            <Button
                android:id="@+id/history_button"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:background="@drawable/action_button_background"
                android:fontFamily="sans-serif-light"
                android:gravity="left|center_vertical"
                android:text="History"
                android:textAllCaps="false"
                android:textColor="#C4C4C4"
                android:textColorHighlight="#FAFAFA"
                android:textSize="14sp" />

            <Button
                android:id="@+id/favorites_button"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:background="@drawable/action_button_background"
                android:fontFamily="sans-serif-light"
                android:gravity="left|center_vertical"
                android:text="Favorites"
                android:textAllCaps="false"
                android:textColor="#C4C4C4"
                android:textColorHighlight="#FAFAFA"
                android:textSize="14sp" />

            <Button
                android:id="@+id/playlists_button"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:background="@drawable/action_button_background"
                android:fontFamily="sans-serif-light"
                android:gravity="left|center_vertical"
                android:text="Playlists"
                android:textAllCaps="false"
                android:textColor="#C4C4C4"
                android:textColorHighlight="#FAFAFA"
                android:textSize="14sp" />
        </LinearLayout>


        <View
            android:id="@+id/divider"
            android:layout_width="428px"
            android:layout_height="1px"
            android:background="#C2C2C2" />

        <Button
            android:id="@+id/settings_button"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/action_button_background"
            android:drawableLeft="@drawable/settings_gear"
            android:fontFamily="sans-serif-light"
            android:gravity="left|center_vertical"
            android:text="    Settings"
            android:textAllCaps="false"
            android:textColor="#C4C4C4"
            android:textColorHighlight="#FAFAFA"
            android:textSize="14sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/my_qello_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>