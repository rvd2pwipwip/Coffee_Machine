<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="left|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_myqello"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:src="@drawable/stingray_qello_white" />

        <TextView
            android:id="@+id/subscribe_offer_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="@string/subscribe_offer_list_title"
            android:textColor="@color/ui_almost_white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/subscribe_offer_list_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="@string/subscribe_offer_list_item_1"
            android:textColor="@color/ui_almost_white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subscribe_offer_list_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/subscribe_offer_list_item_2"
            android:textColor="@color/ui_almost_white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subscribe_offer_list_item_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/subscribe_offer_list_item_3"
            android:textColor="@color/ui_almost_white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subscribe_offer_list_item_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/subscribe_offer_list_item_4"
            android:textColor="@color/ui_almost_white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>