<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="BaseButton">
        <!-- Base button style -->
        <item name="android:background">@drawable/text_input_frame_state</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/ui_almost_white</item>
    </style>

    <style name="call_to_action_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_corner_button_state</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:minWidth">260dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="call_to_action_button_style_outline" parent="BaseButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/ui_grey</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="call_to_action_button_style_outline_inactive">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/text_input_frame_state</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/disabled_state</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="call_to_action_button_style_outline_small" parent="BaseButton">
        <item name="android:padding">5dp</item>
    </style>

    <style name="text_input_style" parent="BaseButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/ui_grey</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="secondary_button" parent="BaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/ui_grey</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>