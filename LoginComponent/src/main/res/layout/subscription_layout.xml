<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login_create_account">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="125dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/stingray_qello_white_account" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:paddingTop="20dp"
        android:paddingBottom="0dp"
        android:text="Select your plan"
        android:textColor="@color/accent"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:text="Enjoy Stingray Qello uninterrupted after your FREE trial ends." />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/purchase_item"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            tools:itemCount="1"
            tools:listitem="@layout/purchase_item" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/purchase_item_rebate"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            tools:itemCount="1"
            tools:listitem="@layout/purchase_item_rebate" />

    </LinearLayout>

    <Button
        android:id="@+id/button4"
        style="@style/call_to_action_button_style_outline"
        android:layout_width="190dp"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:text="Restore Purchase"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="750dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/plan_disclaimer"
        android:textAlignment="center"
        android:textColor="#777777"
        android:layout_marginTop="20dp"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/terms_button"
            style="@style/secondary_button"
            android:layout_width="175dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:text="Terms and Conditions"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/privacy_button"
            style="@style/secondary_button"
            android:layout_width="175dp"
            android:layout_height="25dp"
            android:background="@drawable/grey_frame"
            android:text="Privacy Policy"
            android:textAllCaps="false" />

    </LinearLayout>
</LinearLayout>