<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login_create_account"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_qello_logo_header"
                android:layout_width="125dp"
                android:layout_height="43dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/stingray_qello_white_account" />

            <TextView
                android:id="@+id/textView_screen_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="0dp"
                android:text="Create an account"
                android:textAlignment="center"
                android:textColor="@color/accent"
                android:textSize="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:text="Start your 7-day FREE trial"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/userName"
                style="@style/text_input_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/password"
                style="@style/text_input_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/error_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                tools:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:text="By creating an account, you accept Stingrayâ€™s Terms and Conditions and Privacy Policy."
                android:textAlignment="center"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/create_account_terms"
                    style="@style/call_to_action_button_style_outline_small"
                    android:layout_width="187dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginRight="10dp"
                    android:text="Terms and Conditions"
                    android:textAllCaps="false"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/create_account_pp"
                    style="@style/call_to_action_button_style_outline_small"
                    android:layout_width="187dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="Privacy Policy"
                    android:textAllCaps="false"
                    android:textSize="12dp" />

            </LinearLayout>

            <Button
                android:id="@+id/create_button"
                style="@style/call_to_action_button_style_outline_inactive"
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Create Account"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="or"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/login_with_amazon2"
                style="@style/image_button_border_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/login_button_content_description"
                android:src="@color/login_button_image_state" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/or_log_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Already have an account?"
                android:textAlignment="center" />

            <Button
                android:id="@+id/log_in_btn"
                style="@style/call_to_action_button_style_outline"
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="Log In"
                android:textAllCaps="false" />
        </LinearLayout>
</LinearLayout>